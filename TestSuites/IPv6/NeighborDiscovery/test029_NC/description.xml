<TestCaseDefinition
	testSuite=			"IPv6"
	testGroup=			"NeighborDiscovery"
	testCase=			"IPv6NeighborDiscoveryTest29"
	protocol=			"IPv6"
	standard=			"RFC4861"
	standardSections=		"RFC4861 (Section 7.3.3)"
	status=				"Mandatory"
>

	<StandardExtracts>
	</StandardExtracts>

	<TestDescription>
		<Item text="Verify that a node properly updates its Neighbor Cache from the REACHABLE state upon the receipt of a Neighbor Advertisement."/>
		<Item text=""/>
		<Item detail="yes" text="When a Neighbor Cache entry is in the REACHABLE state, the receipt of a Neighbor Advertisement causes the state of the entry to change as follows, based upon the Solicited and Override flags of the advertisement, and whether the link-layer address is equal to the previously cached value."/>
	</TestDescription>

	<TestPurpose>
	</TestPurpose>

	<Legend>
	</Legend>

	<Assumptions>
	</Assumptions>

	<NodeNameMap>
		<Node id="T1" name="Tester Port 1"/>
		<Node id="D1" name="DUT Port 1"/>
	</NodeNameMap>


<ExpectedMessageSequence>
	<Heading text="Clear T1 buffer" />
	<Message from="T1" to="D1" msg="Echo_Request" />
	<Message from="T1" to="D1" msg="Neighbor_Advertisement" />
	<Message from="T1" to="D1" msg="Neighbor_Advertisement_C" />
	<Heading text="Clear T1 buffer" />
	<Message from="T1" to="D1" msg="Echo_Request" />
	<Heading text="Delay 5 seconds" />
	<Timeout value="3" units="seconds" />
	<Message from="D1" to="T1" msg="Neighbor Solicitation Message" />
	<Heading text="Delay 10 seconds" />
</ExpectedMessageSequence>

	<TestPassConditions>
		<Item text="Just wait and see if can receive a N_S. if so ,then pass."/>
	</TestPassConditions>

	<PostTestAction>
	</PostTestAction>

</TestCaseDefinition>