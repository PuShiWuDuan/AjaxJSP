
# include the global parameters
@include /config/globalparam.data

packet Neighbor_Advertisement {
	header ICMPv6 {
		ICMP_Type  = 136
		Code  = 0
		Message_Body  = [cat 60 00 00 00 $TN_IPv6\
			       02 02 $TN_MAC 00 00 00 00 00 00]
	}
	header IPv6 {
		Next_Header  = $ICMPv6
		Hop_Limit  = 255
	}
}

packet Echo_Request {
	header ICMPv6 {
        		ICMP_Type  = 128   
		Code  = 0
		Message_Body  = [cat 00 11 00 01]
	}
	header IPv6 {
		Next_Header  = $ICMPv6
	}
}

packet Neighbor_Advertisement_H {
	header ICMPv6 {
		ICMP_Type  = 136
		Code  = 0
		Message_Body  = [cat 60 00 00 00 $TN_IPv6\
			       02 02 $TN_MAC 00 00 00 00 00 00]
	}
	header IPv6 {
		Next_Header  = $ICMPv6
		Hop_Limit  = 255
	}
}

##############################################################
# test procedure for test case : TC_058
##############################################################

create6LoWPAN Neighbor_Advertisement
create6LoWPAN Echo_Request
create6LoWPAN Neighbor_Advertisement_H

auto_reply_na off
delay 10

send6LoWPAN Echo_Request
send6LoWPAN Neighbor_Advertisement
delay 450
send6LoWPAN Echo_Request
#delay 50
receive 65 0 <icmpv6:0 1 0x87>
#PROBE state

send6LoWPAN Neighbor_Advertisement_H
#REACHABLE state
delay 450
#STALE state
send6LoWPAN Echo_Request
#DELAY state
#delay 50
receive 80 0 <icmpv6:0 1 0x87><icmpv6:8 16 $TN_IPv6>
delay 100
