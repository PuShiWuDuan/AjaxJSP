@include /config/globalparam.data

packet Neighbor_Advertisement {
	header ICMPv6 {
		ICMP_Type  = 136
		Code  = 0
		Message_Body  = [cat 60 00 00 00 $TN_IPv6 02 02 $TN_MAC 00 00 00 00 00 00]
	}
	header IPv6 {
		Next_Header  = $ICMPv6
		Source_Address  = $TN_IPv6
		Destination_Address  = $NUT_IPv6
	}
	header 6LoWPAN {
	        Header_Type = LOWPAN_HC1
	}
}

packet Echo_Request {
	header ICMPv6 {
		ICMP_Type  = 128
		Code  = 0
		Message_Body  = [cat 00 00 00 00 \
		01 01 01 01 01 01 01 01 01 01 01 01 01 01 01 01]
	}
	header IPv6 {
		Next_Header  = $ICMPv6
		Source_Address  = $TN_IPv6
		Destination_Address  = $NUT_IPv6
	}
	header 6LoWPAN {
	        Header_Type = IPv6
	}
}

packet Echo_Request_Fragment {
	header ICMPv6 {
		ICMP_Type  = 128
		Code  = 0
		Message_Length = 600    #max value 190 for TelosB,1236 for AVR
		Message_Body  = [cat 00 11 00 01 ]
		Mark_Pos = 120
		Mark_Data = [cat 3e 4f]
	}
	header IPv6 {
		Next_Header  = $ICMPv6
		Source_Address  = $TN_IPv6
		Destination_Address  = $NUT_IPv6
	}
	header 6LoWPAN {
	        Header_Type = LOWPAN_HC1
	}
}

