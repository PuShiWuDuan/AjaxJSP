<TestCaseDefinition
	testSuite=			"IPv6"
	testGroup=			"AutoConfiguration"
	testCase=			"IPv6AutoConfigurationTest7"
	protocol=			"IPv6"
	standard=			"RFC4862"
	standardSections=		"RFC4862 (Section 5.5.3)"
	status=				"Mandatory"
>

	<StandardExtracts>
	</StandardExtracts>

	<TestDescription>
		<Item text="Verify that a host can ignore prefix option if Preferred Lifetime is more than Valid Lifetime. "/>
		<Item text=""/>
		<Item detail="yes" text="After receiving Router Advertisement with prefix; if the prefix option is valid, DUT should combine the prefix with identifier to get address, or else ignore it."/>
	</TestDescription>

	<TestPurpose>
	</TestPurpose>

	<Legend>
	</Legend>

	<Assumptions>
	</Assumptions>

	<NodeNameMap>
		<Node id="T1" name="Tester Port 1"/>
		<Node id="D1" name="DUT Port 1"/>
	</NodeNameMap>


<ExpectedMessageSequence>
	<Heading text="Clear T1 buffer" />
	<Message from="T1" to="D1" msg="Router_Advertisement_1" />
	<Heading text="Delay 5 seconds" />
	<Heading text="Clear T1 buffer" />
	<Message from="T1" to="D1" msg="Neighbor_Solicitation_1" />
	<Timeout value="4" units="seconds" />
	<ExceptionGroup title="Unexpected Packet">
		<Message from="D1" to="T1" msg="Neighbor Advertisement Message" />
	</ExceptionGroup>
	<EndMessage from="T1" to="D1" msg="End of test case" />
</ExpectedMessageSequence>

	<TestPassConditions>
		<Item text="T1 shouldn&apos;t receive Neighbor Advertisement."/>
	</TestPassConditions>

	<PostTestAction>
	</PostTestAction>

</TestCaseDefinition>